%p.pull-right
  %a.btn.btn-primary{href: new_invoice_path}
    %span.glyphicon.glyphicon-plus
    New Invoice

= page_header 'Listing invoices'

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Sponsor
      %th Package type
      %th Total
      %th Balance

  %tbody
    - @invoices.each do |invoice|
      %tr
        %td= link_to invoice.name, invoice
        %td= link_to invoice.sponsor.name, invoice.sponsor
        %td= link_to invoice.package_type.name, invoice.package_type
        %td= number_to_currency invoice.total
        %td= number_to_currency invoice.balance
