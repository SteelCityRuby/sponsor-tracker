%h1 Listing payments

%table.table.table-striped
  %thead
    %tr
      %th Invoice
      %th Payment type
      %th Ammount
      %th Created by
      %th
      %th
      %th

  %tbody
    - @payments.each do |payment|
      %tr
        %td= payment.invoice
        %td= payment.payment_type
        %td= payment.ammount
        %td= payment.created_by
        %td= link_to 'Show', payment
        %td= link_to 'Edit', edit_payment_path(payment)
        %td= link_to 'Destroy', payment, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

%a.btn.btn-primary{href: new_payment_path}
  %span.glyphicon.glyphicon-plus
  New Payment