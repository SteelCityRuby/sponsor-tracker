%h1.page-header Package addon: #{@package_addon_type.name}

%dl.dl-horizontal
  %dt Price:
  %dd= number_to_currency @package_addon_type.price
  %dt Spots remaining:
  %dd= @package_addon_type.remaining
  %dt Total spots:
  %dd= @package_addon_type.total_spots

%a.btn.btn-default{href: edit_package_addon_type_path(@package_addon_type)} Edit

%h2 Allocated spots

%table.table.table-striped
  %thead
    %tr
      %th Invoice
      %th Qty
  %tbody
    - @package_addon_type.invoice_addon_line_items.each do |line_item|
      %tr
        %td= link_to line_item.invoice.name, line_item.invoice
        %td= line_item.quantity
